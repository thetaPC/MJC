Option Strict On
Option Explicit On
Option Infer Off


Public Class frmMain


    Private Sub btnWhile_Click(sender As Object, e As EventArgs) Handles btnWhile.Click

        'variable declarations
        Dim intTotal As Integer

        'stating intTotal
        Integer.TryParse(txtInput.Text, intTotal)

        'loops the statement
        Do While intTotal > 0
            intTotal = intTotal - 2
            lblOutput.Text = intTotal.ToString
        Loop

    End Sub

    Private Sub btnUntil_Click(sender As Object, e As EventArgs) Handles btnUntil.Click

        'variable declarations
        Dim intTotal As Integer

        'stating intTotal
        Integer.TryParse(txtInput.Text, intTotal)

        'loops the statement
        Do Until intTotal < 0
            intTotal = intTotal - 2
            lblOutput.Text = intTotal.ToString
        Loop

    End Sub
End Class
