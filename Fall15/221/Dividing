Option Strict On
Option Explicit On
Option Infer Off


Public Class frmMain

    'dividing numbers by 2
    Private Sub DivideByTwo(ByRef dividend As Double)
        lblNum.Text = (dividend / 2).ToString
    End Sub

    Private Sub btnDiv_Click(sender As Object, e As EventArgs) Handles btnDiv.Click

        'variable declarations
        Dim number As Double

        'assigning variables
        number = 87.8

        'sending numbers to be divided
        Call DivideByTwo(number)

    End Sub

End Class

