		var animation = setInterval(function countdown(){ rolling() }, 2000);
	
			

		function rolling() {
			var roll = (1 + Math.floor(6 * Math.random()));
			if (roll == 1) {
			var die = '&#x2680;';
			} else if (roll == 2) {
			var die = '&#x2681;';
			} else if (roll == 3) {
			var die = '&#x2682;';
			} else if (roll == 4) {
			var die = '&#x2683;';
			} else if (roll == 5) {
			var die = '&#x2684;';
			} else if (roll == 6) {
			var die = '&#x2680;';
			}

		document.write(die.fontsize(500));
